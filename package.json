{
  "name": "@arshad-shah/ui-library",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.3.0",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./styles.css": "./dist/style.css"
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src .",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" --ignore-path .gitignore --ignore-path \"**.stories.tsx\"",
    "prepare": "pnpm run build",
    "release": "pnpm build && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only",
    "changeset": "changeset",
    "test-storybook": "test-storybook",
    "run:tests:storybook": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm http-server storybook-static --port 6006 --silent\" \"pnpm wait-on tcp:6006 && pnpm test-storybook\""
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@chromatic-com/storybook": "3.2.4",
    "@eslint/js": "^9.20.0",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "8.5.6",
    "@storybook/addon-interactions": "8.5.6",
    "@storybook/addon-onboarding": "8.5.6",
    "@storybook/blocks": "8.5.6",
    "@storybook/react": "8.5.6",
    "@storybook/react-vite": "8.5.6",
    "@storybook/test": "8.5.6",
    "@storybook/test-runner": "^0.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.3",
    "globals": "^15.15.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.0.0",
    "playwright": "^1.50.1",
    "postcss": "^8.5.2",
    "prettier": "^3.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "8.5.6",
    "tailwindcss": "^4.0.6",
    "terser": "^5.39.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.4",
    "@storybook/addon-a11y": "^8.5.6",
    "@storybook/addon-actions": "^8.5.6",
    "@tailwindcss/vite": "^4.0.6",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.3",
    "lucide-react": "^0.475.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.0.1"
  }
}